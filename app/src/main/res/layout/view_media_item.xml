<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.mackenzie.waifuviewer.domain.WaifuPicItem"/>
        <import type="com.mackenzie.waifuviewer.domain.WaifuImItem"/>
        <variable name="waifuPic" type="WaifuPicItem" />
        <variable name="waifuIm" type="WaifuImItem"/>
    </data>

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="@dimen/default_corner">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_auto_start="true">

            <View
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@android:color/darker_gray" />

        </com.facebook.shimmer.ShimmerFrameLayout>


        <ImageView
            android:id="@+id/waifuThumb"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:url="@{waifuIm.url}"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/waifuTitle"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            tools:text="Title" />

        <ImageView
            android:id="@+id/iv_favs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="14dp"
            android:src="@drawable/ic_favorite_on"
            app:visible="@{waifuIm.favorite}" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>

</layout>